<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="alt_hr_contract_basecomponent_tree">
            <field name="name">hr.contract.basecomponent.tree</field>
            <field name="model">hr.contract.basecomponent</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="alt_hr_contract_basecomponent_form">
            <field name="name">alt.hr.contract.basecomponent.form</field>
            <field name="model">hr.contract.basecomponent</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="code"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
       
        <record model="ir.actions.act_window" id="hr_payroll_contract_action">
            <field name="name">Contract Component</field>
            <field name="res_model">hr.contract.basecomponent</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem 
            id="alt_hr_payroll_contract_config"
            name="Contract Configuration"
            parent="hr_work_entry_contract.menu_hr_payroll_configuration"
            sequence="110"
        />
        <menuitem 
            id="alt_hr_payroll_contract_menu"
            name="Component"
            parent="altech_payroll_indonesia.alt_hr_payroll_contract_config"
            action="hr_payroll_contract_action"
            sequence="1"
        />
        <record model="ir.ui.view" id="alt_hr_payroll_hr_contract_form">
            <field name="name">alt.hr.payroll.hr.contract.form</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='information']" position="after">
                    <page string="Contract Attribute" name="contract_attribute">
                        <field name="attribut_lines">
                            <tree editable="bottom">
                                <field name="name" options="{'no_open': True, 'no_create': True}"/>
                                <field name="prorate"/>
                                <field name="nilai"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
                <xpath expr="//page[@name='information']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='hr_responsible_id']" position="after">
                    <field name="province_id"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
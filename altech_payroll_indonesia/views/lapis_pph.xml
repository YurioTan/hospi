<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="lapis_pph_view_list" model="ir.ui.view">
            <field name="name">Tingkat Lapis PPH</field>
            <field name="model">hr.lapis.pph</field>
            <field name="arch" type="xml">
                <tree string="Tingkat Lapis PPH" editable="bottom">
                    <field name="lapis" required="1"/>
                    <field name="amount_batas_bawah" required="1"/>
                    <field name="amount_batas_atas" required="1"/>
                    <field name="percentage" required="1"/>
                    <field name="akumulasi" required="1"/>
                </tree>
            </field>
        </record>

        <record id="action_lapis_pph" model="ir.actions.act_window">
            <field name="name">Tingkat Lapis PPH</field>
            <field name="view_mode">tree</field>
            <field name="res_model">hr.lapis.pph</field>
            <field name="view_id" ref="lapis_pph_view_list"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new Tingkat Lapis PPH
                </p><p>
                Manage Tingkat Besaran PPH to better classify them for tracking and analysis purposes.
            </p>
            </field>
        </record>

        <menuitem 
            id="hr_master_lapis_pph"
            name="Lapis PPh Progresif"
            parent="altech_payroll_indonesia.alt_hr_payroll_other_config"
            action="action_lapis_pph"
            sequence="15"
        />

    </data>
</odoo>
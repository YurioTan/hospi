<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="report_payroll_wizard_view_form" model="ir.ui.view">
        <field name="name">report.payroll.wizard.view.form</field>
        <field name="model">report.payroll.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="payslip_run_id" invisible="1"/>
                        <field name="type_report" required="1"/>
                    </group>
                    <footer>
                        <button type="object" class="oe_highlight" name="action_download" string="Download"/>
                        <button class="oe_link" string="Cancel" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>

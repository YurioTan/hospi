<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record model="ir.ui.view" id="hr_master_ump_tree">
            <field name="name">hr.master.ump.tree</field>
            <field name="model">hr.master.ump</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                    <field name="province_id"/>
                    <field name="ump_nilai"/>
                    <field name="is_default"/>
                </tree>
            </field>
        </record>
        <record model="ir.actions.act_window" id="hr_master_ump_action">
            <field name="name">Master UMP</field>
            <field name="res_model">hr.master.ump</field>
            <field name="view_mode">tree</field>
        </record>
        <menuitem 
            id="hr_master_ump_menu"
            name="Master UMP"
            parent="altech_payroll_indonesia.alt_hr_payroll_other_config"
            action="hr_master_ump_action"
            sequence="12"
        />
    </data>
</odoo>
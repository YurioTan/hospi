<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="cutoff_periode_view_form" model="ir.ui.view">
            <field name="name">Cutoff Periode</field>
            <field name="model">cutoff.periode</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label class="oe_edit_only" string="Description" for="name"/>
                            <h2>
                                <field name="name" readonly="0"/>
                            </h2>
                        </div>
                        <group>
                            <group>
                                <field name="date_start" required="1"/>
                                <field name="date_end" required="1"/>
                                <field name="sequence" required="1"/>
                            </group>
                            <group>
                                <field name="tax_year" required="1"/>
                                <field name="tax_period_month" required="1"/>
                                <field name="is_visible"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="cutoff_periode_view_list" model="ir.ui.view">
            <field name="name">Cutoff Periode</field>
            <field name="model">cutoff.periode</field>
            <field name="arch" type="xml">
                <tree string="Cutoff Periode">
                    <field name="name"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="tax_year"/>
                    <field name="tax_period_month"/>
                    <field name="is_visible"/>
                </tree>
            </field>
        </record>

        <record id="cutoff_periode_view_search" model="ir.ui.view">
            <field name="name">cutoff.periode.view.search</field>
            <field name="model">cutoff.periode</field>
            <field name="arch" type="xml">
                <search string="Search Cutoff Periode">
                    <field name="name"/>
                    <separator/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                     <group expand="0" string="Group By">
                        <filter string="Tahun" name='cutoff_periode_group_by_tahun' domain="[]" context="{'group_by': 'tax_year'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_cutoff_periode_form" model="ir.actions.act_window">
            <field name="name">Cutoff Periode</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="res_model">cutoff.periode</field>
            <field name="search_view_id" ref="cutoff_periode_view_search"/>
            <field name="context">{'search_default_current':1, 'search_default_cutoff_periode_group_by_tahun': 1}</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a new cutoff periode
              </p><p>
                Manage cutoff periode to better classify them for tracking and analysis purposes.
              </p>
            </field>
        </record>

    </data>
</odoo>
            </field>
        </record>
        <record model="ir.ui.view" id="hr_payroll_extras_deduction_adjustment_form">
            <field name="name">hr.payroll.extras.deduction.adjustment.form</field>
            <field name="model">hr.payroll.extras.deduction.adjustment</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button attrs="{'invisible':[('state','in',['confirm','done'])]}" class="btn-primary" string="Confirm Dokumen" type="object" name="confirm_insentif"/>
                        <button attrs="{'invisible':[('state','in',['draft','done'])]}" class="btn-primary" string="Close Dokumen" type="object" name="done_insentif"/>
                        <button attrs="{'invisible':[('state','=','draft')]}" class="btn-default" string="Set to Draft" type="object" name="draft_insentif"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="category_id" required="1" options="{'no_open': True, 'no_create': True}" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            </group>
                            <group>
                                <field name="cutoff_periode_id" domain="[('is_visible', '=', True)]" options="{'no_open': True, 'no_create': True}" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Employee List">
                                <field name="line_ids" attrs="{'readonly': [('state', '!=', 'draft')]}">
                                    <tree editable="bottom">
                                        <field name="name" options="{'no_open': True, 'no_create': True}"/>
                                        <field name="nilai" string="Amount"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="hr_payroll_extras_potongangrutin_action">
            <field name="name">Input Deduction Potongan Rutin</field>
            <field name="res_model">hr.payroll.extras.potongangrutin</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record model="ir.actions.act_window" id="hr_payroll_extras_deduction_adjustment_action">
            <field name="name">Input Deduction Adjustment</field>
            <field name="res_model">hr.payroll.extras.deduction.adjustment</field>
            <field name="view_mode">tree,form</field>
        </record>


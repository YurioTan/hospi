        </record>
        <record model="ir.actions.act_window" id="hr_payroll_extras_deduction_adjustment_category_action">
            <field name="name">Deduction Adj. Category</field>
            <field name="res_model">hr.payroll.extras.deduction.adjustment.category</field>

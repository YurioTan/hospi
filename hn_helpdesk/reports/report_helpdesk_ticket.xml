<odoo>
    <template id="report_helpdesk_ticket">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <t t-set="primary" t-value="user.company_id.primary_color or 'black'"/>
                        <t t-set="secondary" t-value="user.company_id.secondary_color or 'black'"/>
                        <style>
                            .row-with-borders {
                                border-left: 1px solid <t t-esc="secondary"/>;
                                margin: 0;
                            }
                            .row-with-borders:first-child {
                                border-top: 1px solid <t t-esc="secondary"/>;
                            }
                            .row-with-borders &gt; * {
                                border-right: 1px solid <t t-esc="secondary"/>;
                                border-bottom: 1px solid <t t-esc="secondary"/>;
                                padding-top: 5px;
                                padding-bottom: 5px;
                            }
                        </style>
                        <h2>
                            <span t-field="o.name"/>
                        </h2>
                        <div class="mt-4 mb-4">
                            <div class="row row-with-borders">
                                <div class="col-12" style="text-align:center">
                                    <strong>CUSTOMER INFORMATION</strong>
                                </div>
                            </div>
                            <div class="row row-with-borders">
                                <div class="col-6">
                                    <strong>Customer:</strong>&amp;nbsp;<span t-field="o.partner_id"/>
                                </div>
                                <div class="col-6">
                                    <strong>Customer Contact:</strong>&amp;nbsp;
                                    <span t-if="o.partner_id.phone" t-field="o.partner_id.phone"/>
                                    <br t-if="o.partner_id.phone"/>
                                    <span t-if="o.partner_id.mobile" t-field="o.partner_id.mobile"/>
                                </div>
                            </div>
                            <div class="row row-with-borders">
                                <div class="col-12">
                                    <strong>Address:</strong>&amp;nbsp;
                                    <span t-field="o.partner_id.street"/>
                                    <br t-if="o.partner_id.street2"/><span t-if="o.partner_id.street2" t-field="o.partner_id.street2"/>,&amp;nbsp;
                                    <span t-field="o.partner_id.city"/>
                                    <span t-if="o.partner_id.state_id">,&amp;nbsp;</span><span t-if="o.partner_id.state_id" t-field="o.partner_id.state_id"/>
                                    <span t-if="o.partner_id.zip">&amp;nbsp;</span><span t-if="o.partner_id.zip" t-field="o.partner_id.zip"/>
                                </div>
                            </div>
                            <div class="row row-with-borders">
                                <div class="col-6">
                                    <strong>Informant:</strong>&amp;nbsp;
                                    <span t-if="o.x_studio_many2one_field_GyFF3" t-field="o.x_studio_many2one_field_GyFF3"/>
                                    <br t-if="o.x_studio_many2one_field_GyFF3 and o.x_studio_ext_informant" />
                                    <span t-if="o.x_studio_ext_informant" t-field="o.x_studio_ext_informant"/>
                                </div>
                                <div class="col-6">
                                    <strong>Informant Position:</strong>&amp;nbsp;<span t-field="o.x_studio_many2one_field_GyFF3.department_id"/>
                                </div>
                            </div>
                            <div class="row row-with-borders">
                                <div class="col-6">
                                    <strong>Product:</strong>&amp;nbsp;<span t-field="o.x_studio_many2one_field_YmGm3.name"/>
                                </div>
                                <div class="col-6">
                                    <strong>S/N:</strong>&amp;nbsp;<span t-field="o.x_studio_serial_number"/>
                                </div>
                            </div>
                        </div>
                        <div class="mt-4 mb-4">
                            <div class="row row-with-borders">
                                <div class="col-12" style="text-align:center">
                                    <strong>COMPLAINT INFORMATION</strong>
                                </div>
                            </div>
                            <div class="row row-with-borders">
                                <div class="col-12">
                                    <strong>Complaint Date:</strong>&amp;nbsp;<span t-field="o.x_studio_tanggal_klaim"/>
                                </div>
                            </div>
                            <div class="row row-with-borders">
                                <div class="col-12">
                                    <strong>Complaint Description:</strong><br/>
                                    <span t-field="o.description"/>
                                    <span t-if="not o.description"><br/><br/></span>
                                </div>
                            </div>
                            <div class="row row-with-borders">
                                <div class="col-12">
                                    <strong>Root Cause Analysis:</strong><br/>
                                    <span t-field="o.x_studio_root_cause_analysis"/>
                                    <span t-if="not o.x_studio_root_cause_analysis"><br/><br/></span>
                                </div>
                            </div>
                            <div class="row row-with-borders">
                                <div class="col-12">
                                    <strong>Correction:</strong><br/>
                                    <span t-field="o.x_studio_corrective_action"/>
                                    <span t-if="not o.x_studio_corrective_action"><br/><br/></span>
                                </div>
                            </div>
                            <div class="row row-with-borders">
                                <div class="col-12">
                                    <strong>Corrective Action:</strong><br/>
                                    <span t-field="o.x_studio_preventive_action"/>
                                    <span t-if="not o.x_studio_preventive_action"><br/><br/></span>
                                </div>
                            </div>
                        </div>
                        <div class="mt-4 mb-4">
                            <div class="row row-with-borders">
                                <div class="col-4" style="text-align:center"><strong>PIC</strong></div>
                                <div class="col-4" style="text-align:center"><strong>Completion Date</strong></div>
                                <div class="col-4" style="text-align:center"><strong>Remarks</strong></div>
                            </div>
                            <div class="row row-with-borders">
                                <div class="col-4">
                                    <span t-field="o.x_studio_pic_cmo"/>
                                    <span t-if="not o.x_studio_pic_cmo"><br/><br/></span>
                                </div>
                                <div class="col-4">
                                    <span t-field="o.x_studio_tanggal_close"/>
                                    <span t-if="not o.x_studio_tanggal_close"><br/><br/></span>
                                </div>
                                <div class="col-4"><br/><br/></div>
                            </div>
                        </div>
                        <t t-call="hn_base.report_global_signs">
                            <t t-set="labels" t-value="['VERIFIED BY','CREATED BY']"/>
                            <t t-set="names" t-value="[o.x_studio_verified_by.name,o.x_studio_created_by.name]"/>
                            <t t-set="dates" t-value="[o.x_studio_tanggal_close,o.create_date]"/>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="action_report_helpdesk_ticket" model="ir.actions.report">
        <field name="name">Ticket</field>
        <field name="model">helpdesk.ticket</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">hn_helpdesk.report_helpdesk_ticket</field>
        <field name="report_file">hn_helpdesk.report_helpdesk_ticket</field>
    </record>

</odoo>

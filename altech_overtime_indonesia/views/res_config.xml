<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_overtime_inherit_form" model="ir.ui.view">
            <field name="name">res.config.overtime.inherit.form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Overtime" string="Overtime" data-key="altech_overtime_indonesia" groups="hr_payroll.group_hr_payroll_manager">
                        <h2>Overtime</h2>
                        <div class="row mt16 o_settings_container" name="overtime_setting_container">
                            <div class="col-12 col-lg-6 o_setting_box" id="overtime_setting_setting">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <div class="content-group">
                                        <div class="row mt16">
                                            <label string="Granulity" for="overtime_granulity" class="col-lg-3 o_light_label"/>
                                            <field name="overtime_granulity"/>
                                        </div>
                                    </div>
                                    <div class="content-group">
                                        <div class="row mt16">
                                            <label string="Overtime Pembagi" for="overtime_pembagi" class="col-lg-3 o_light_label"/>
                                            <field name="overtime_pembagi"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box" id="overtime_setting_basis_setting">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <div class="content-group">
                                        <div class="row mt16">
                                            <label string="Basis Perhitungan" for="basis_perhitungan" class="col-lg-3 o_light_label"/>
                                            <field name="basis_perhitungan"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
        <record id="action_hr_overtime_configuration" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'altech_overtime_indonesia', 'bin_size': False}</field>
        </record>
    </data>
</odoo>